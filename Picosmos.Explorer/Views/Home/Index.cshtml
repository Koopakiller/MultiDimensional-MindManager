@model InitialDataModel
@{
    ViewBag.Title = "Index";
}


<label>Database field=</label>
<select id="select">
    @foreach (var item in Model.TableColumns)
    {
        <option data-table="@item.Item1" data-column="@item.Item2">@item.Item3</option>
    }
</select>
<label>Value=</label>
<input type="number" id="numberBox"/>
<input type="button" id="submitButton" value="Go" />

<div id="box">

</div>

<div id="legend" class="dialog">
    <h1>Legend</h1>
    <ul>
        <li><span class="child-column">Blue</span><br />This column is a parent of 0 or more data sets (The 1 in an <b>1</b>:m relation)</li>
        <li><span class="parent-column">Orange</span><br/>This column is a child of 0 or 1 data sets (The m in an 1:<b>m</b> relation)</li>
        <li><span class="other-column">Yellow</span><br/>Other Data</li>
    </ul>
</div>